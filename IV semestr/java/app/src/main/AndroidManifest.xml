<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gymtracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pelnelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pelnelogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Główna aktywność (punkt wejścia aplikacji) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pozostałe aktywności -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TrainingDaysActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TrainingSetupActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TrainingMainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TrainingSetupRegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AccountSettingsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".UpdateUserDataActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".UpdateMeasurementsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TrainingGoalsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".FullProgressActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AchievementsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

    </application>

</manifest>